@inherits LayoutComponentBase


@inject NavigationManager _nav

<RadzenDialog />
<RadzenNotification />
<RadzenContextMenu />
<RadzenTooltip />

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="10">
            <RadzenSidebarToggle Click="@(() => sidebar1Expanded = !sidebar1Expanded)" />
            <RadzenLabel Text="Northwinds Blazor Web Assembly Demo" />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@sidebar1Expanded" Style="width: 220px; background-color: lightblue">
        <RadzenPanelMenu Style="background-color: lightblue">
            <RadzenButton ButtonStyle=ButtonStyle.Secondary Image="Images/division.png" Text="Employees" Style="height: 60px; width: 200px; margin: 10px" class="text-left" Click="@(()=>_nav.NavigateTo("/Employees"))" />
            <RadzenButton ButtonStyle=ButtonStyle.Secondary Image="Images/category.png" Text="Product Categories" Style="height: 60px; width: 200px; margin: 10px" class="text-left" Click="@(()=>_nav.NavigateTo("/Categories"))" />
            <RadzenButton ButtonStyle=ButtonStyle.Secondary Image="Images/products.png" Text="Products" Style="height: 60px; width: 200px; margin: 10px" class="text-left" Click="@(()=>_nav.NavigateTo("/Products"))" />
            <RadzenButton ButtonStyle=ButtonStyle.Secondary Image="Images/customers.png" Text="Customers" Style="height: 60px; width: 200px; margin: 10px" class="text-left" Click="@(()=>_nav.NavigateTo("/Customers"))" />
            <RadzenButton ButtonStyle=ButtonStyle.Secondary Image="Images/orders.png" Text="Orders" Style="height: 60px; width: 200px; margin: 10px" class="text-left" Click="@(()=>_nav.NavigateTo("/Orders"))" />
            <RadzenButton ButtonStyle=ButtonStyle.Secondary Image="Images/suppliers.png" Text="Suppliers" Style="height: 60px; width: 200px; margin: 10px" class="text-left" Click="@(()=>_nav.NavigateTo("/Suppliers"))" />
            <RadzenButton ButtonStyle=ButtonStyle.Secondary Image="Images/shippers.png" Text="Shippers" Style="height: 60px; width: 200px; margin: 10px" class="text-left" Click="@(()=>_nav.NavigateTo("/Shippers"))" />
        </RadzenPanelMenu>
 
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
 @*    <RadzenFooter>
        Footer - We can add additional items here Jim!
    </RadzenFooter> *@
</RadzenLayout>

@code {
    bool sidebar1Expanded = true;
}
