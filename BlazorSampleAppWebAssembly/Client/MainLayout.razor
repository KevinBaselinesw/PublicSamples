@inherits LayoutComponentBase

<RadzenDialog />
<RadzenNotification />
<RadzenContextMenu />
<RadzenTooltip />

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebar1Expanded = !sidebar1Expanded)" />
            <RadzenLabel Text="Northwinds Blazor Web Assembly Demo" />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@sidebar1Expanded">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Employees" Icon="add" Path="Employees" />
            <RadzenPanelMenuItem Text="Product Categories" Icon="add" Path="Categories" />
            <RadzenPanelMenuItem Text="Products" Icon="add" Path="Products" />
            <RadzenPanelMenuItem Text="Customers" Icon="add" Path="Customers" />
            <RadzenPanelMenuItem Text="Orders" Icon="add" Path="Orders" />
            <RadzenPanelMenuItem Text="Suppliers" Icon="add" Path="Suppliers" />
            <RadzenPanelMenuItem Text="Shippers" Icon="add" Path="Shippers" />
        </RadzenPanelMenu>
 
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
 @*    <RadzenFooter>
        Footer - We can add additional items here Jim!
    </RadzenFooter> *@
</RadzenLayout>

@code {
    bool sidebar1Expanded = true;
}
